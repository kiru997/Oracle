@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Layout/View.cshtml";
}
@using WebMVC.Models
@model WebMVC.Models.HomeView


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <!-- items -->
            <input type="hidden" value="0" name="soluong" />
            @foreach (var item in Model.listsx)
            {
                 <!-- items -->
                <div class="col-md-3 col-sm-6">
                    <div class="single-product">
                        <div class="product-f-image">


                            <img src="@item.anhbia" style="width:100% ; height:100%" />
                            <div class="product-hover">
                                <a id="@item.id" name="btncart" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                <a href="ProductDetail?id=@item.id" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                            </div>
                        </div>

                        <h2 style="color:red"><a href="single-product.html">@item.tensp</a></h2>
                        @{
                int gia = (int)(item.gia - item.gia * item.sale / 100);
                        }
                        <div class="product-carousel-price">
                            <ins>$@item.gia</ins> <del>$@gia</del>
                        </div>
                    </div>
                </div>

                                <!--   end item -->
            }
            <!-- end items -->


            <div class="row">
                <div class="col-md-12">
                    <div class="product-pagination text-center">
                        <nav>
                            <ul class="pagination">
                                <li>
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>



