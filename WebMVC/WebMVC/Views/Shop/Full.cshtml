
@{
    ViewBag.Title = "Full";
    Layout = "~/Views/Layout/Adminlayout.cshtml";
}

@section Scripts{



    <script src="~/Container/AdminJS/jquery.min.js"></script>
    <script src="~/Container/AdminJS/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Container/AdminJS/jquery.twbsPagination.min.js"></script>
    <script src="~/Container/AdminJS/controller/shopcontroller.js"></script>
    <script>
        $("#confirmdelete").click(function () {
            shopcontroller.DeleteEmployee(listcofig.iddelete);
        });
        $("#btnconfirm").click(function () {
            shopcontroller.ConfirmOrPaid(listcofig.idconfirm, listcofig.isconfirm);
        });
    </script>
}
<div id="thanhcong" class="alert alert-success" style="display: none;">Success</div>
<div id="thatbai" class="alert alert-danger" style="display: none;">Failure</div>
<table id="table" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <tr>
        <th>Id</th>
        <th>Id User</th>
        <th>Sản Phẩm</th>
        <th>Id Ship</th>
        <th>Ngày Đặt</th>
        <th>Status</th>
        <th>Thanh Toán</th>
        <th>Tổng Tiền</th>
        <th>Action</th>
    </tr>
    <tbody id="tblfull"></tbody>
</table>
<div id="pagination-demo" class="pagination-sm"></div>




<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Delete Employee</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure ? You want to delete this. </h4>

                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Container/Adminimages/InternetSlowdown_Day.gif" width="150" />

                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="confirmdelete" class="btn btn-success btn-confirm">Delete</button>
            </div>

        </div>

    </div>

</div>




<div class="modal fade" id="confirmorpaidmodel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Confirm</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure ? You want to Confirm this. </h4>

                <div style="text-align:center;display:none" id="loaderconfirm">
                    <img src="~/Container/Adminimages/InternetSlowdown_Day.gif" width="150" />

                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="btnconfirm" class="btn btn-success btn-confirm">Confirm</button>
            </div>

        </div>

    </div>

</div>