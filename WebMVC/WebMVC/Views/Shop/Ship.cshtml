@{
    ViewBag.Title = "Ship";
    Layout = "~/Views/Layout/Adminlayout.cshtml";
}

@section Scripts{



    <script src="~/Container/AdminJS/jquery.min.js"></script>
    <script src="~/Container/AdminJS/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Container/AdminJS/jquery.twbsPagination.min.js"></script>
    <script src="~/Container/AdminJS/controller/shipcontroller.js"></script>
    <script>
        $("#confirmdelete").click(function () {
            shipcontroller.DeleteEmployee(listcofig.iddelete);
        });
        $("#btnSave").click(function () {
            shipcontroller.save(listcofig.idedit);
        });
    </script>
}
<div id="thanhcong" class="alert alert-success" style="display: none;">Success</div>
<div id="thatbai" class="alert alert-danger" style="display: none;">Failure</div>
<table id="table" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Note</th>
        <th>Action</th>
    </tr>
    <tbody id="tblship"></tbody>
</table>
<div id="pagination-demo" class="pagination-sm"></div>




<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Delete Employee</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure ? You want to delete this. </h4>

                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Container/Adminimages/InternetSlowdown_Day.gif" width="150" />

                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="confirmdelete" class="btn btn-success btn-confirm">Delete</button>
            </div>

        </div>

    </div>

</div>




<!-- Bootstrap modal -->
<div class="modal fade" id="modal_form" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title">Book Form</h3>
                <div style="text-align:center;display:none" id="addload">


                    <img src="~/Container/Adminimages/InternetSlowdown_Day.gif" width="100" />

                </div>
            </div>

            <div class="modal-body form">
                <form id="formadd" method="post" class="form-horizontal">
                    <input type="hidden" value="" name="book_id" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên</label>
                            <div class="col-md-9">
                                <input id="name" style="border-radius:4px" name="tensp" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Họ</label>
                            <div class="col-md-9">
                                <input id="ho" style="border-radius:4px" name="tensp" class="form-control" type="text">
                            </div>
                        </div>
                    
                        <div class="form-group">
                            <label class="control-label col-md-3">Địa chỉ</label>
                            <div class="col-md-9">
                                <textarea id="diachi" style="border-radius: 4px" rows="5" class="form-control" name="info" placeholder="Enter password"> </textarea>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label col-md-3">SDT</label>
                            <div class="col-md-9">
                                <input min="0" id="sdtt" style="border-radius:4px" name="book_category"  class="form-control" type="number">

                            </div>
                        </div>
                     
                        <div class="form-group">
                            <label class="control-label col-md-3">Ghi Chú</label>
                            <div class="col-md-9">
                                <textarea id="ghichu" style="border-radius: 4px" rows="5" class="form-control" name="info" placeholder="Enter password"> </textarea>
                            </div>
                        </div>
                       
                        

                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-success btn-save">Save</button>
                <button type="button" class="btn btn-danger btn-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- End Bootstrap modal -->